/**index.wxss**/
page{
  height: 100%;
  font-family: '微软雅黑';
}
.container{
  width: 100%;
  height: 100%;
  background-color: #eeeeee;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.info{
  /* display: flex;
  flex-direction: column;
  align-items: center; */
  text-align: center;
  margin: 4px;
}
.face{
  margin-bottom: 10px;
}
.face image{
  width: 48px;
  height: 48px;
}
.login{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.login input{
  width: 80%;
  border: 1px solid #ccc;
  margin-bottom: 10px;
  border-radius: 4px;
  padding: 5px;
  font-size: 14px;
}
.content{
  width: 80%;
  height: 80%;
  background-color: #ffffff;
  border: 2px solid #dcdcdc;
}
.copyright{
  font-size: 14px;
  color: #ccc;
}

.reg{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.reg button{
  width: 84%;
  margin-bottom: 20px;
  height: 40px;
  line-height: 40px;
}
.getps{
   text-align: center;
   padding-top: 20px;
}
.getps navigator{
   font-size: 14px;
   color: #6aa4c2;
}