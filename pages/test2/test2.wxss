/* pages/test2/test2.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #eeeeee;
}
.content{
  width: 80%;
  height: 80%;
  background-color: #ffffff;
  border: 2px solid #ccc;
  margin-top: 10%;
  margin-left: 10%;
}
.info{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40px;
}
.face{
  margin-bottom: 10px;
}
.face image{
  width: 48px;
  height: 48px;
  border-radius: 6px;
}
.login{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.login input{
  width: 80%;
  border: 1px solid #ccc;
  border-radius: 6px;
  padding: 5px;
  font-size: 14px;
  margin-bottom: 16px;
}

.reg{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.reg button{
  width: 84%;
  height: 44px;
  line-height: 44px;
  margin-bottom: 20px;
}

.fgetps{
   text-align: center;
}
.fgetps navigator{
  font-size: 14px;
  color: #666dac;
}

.copyright{
  font-size: 14px;
  color: #6aa4c2;
  text-align: center;
  padding-top: 30px;
}