/* pages/test1/test1.wxss */
page{
  height: 100%;
  width: 100%;
  font-family: '微软雅黑';
}
.container{
  width: 100%;
  height: 100%;
  background-color: #eeeeee;
}
.content{
  width: 100%;
  height: 90%;
  background-color: #ffffff;
  border: 2px solid #ccc;
}
.face{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.face image{
  width: 48px;
  height: 48px;
  border-radius: 16px;
}
.login{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.login input{
  border: 1px solid #ccc;
  width: 80%;
  font-size: 14px;
  margin-bottom: 16px;
}

.reg{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.reg button{
  width: 84%;
  height: 44px;
  line-height: 44px;
  margin-bottom: 20px;
}
.fgetps{
  text-align: center;
  padding-top: 30px;
}

.fgetps navigator{
  font-size: 14px;
  color: #6aa4c2;
}

.copyright{
  font-size: 14px;
  color: #666;
}